@model List<MenuViewModel>

<h1>Ecco la lista dei Menù</h1>
@if (User.IsInRole("Ristoratore"))
{
    <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci Nuovo Menù</a>
}
<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Visualizza Dettagli</a>
                @*    @if (User.IsInRole("Ristoratore"))
                    {
                        <a asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Modifica</a>
                        <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Elimina</a>
                    }*@
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
        </tr>
    </tfoot>
</table>