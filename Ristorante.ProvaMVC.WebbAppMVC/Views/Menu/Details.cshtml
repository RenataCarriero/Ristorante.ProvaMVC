@model MenuViewModel
<h1>@Model.Name</h1>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Piatti)
        {
            <tr>
                <td>@item.Name</td>
                <td><p>@item.Prezzo €</p></td>
                @if (User.IsInRole("Ristoratore"))
                {
                    
                     <td> <a asp-controller="Menu" asp-action="Decouple" asp-route-id="@item.Id" class="btn btn-primary">Decouple</a></td>  
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            @{double sum=0;
            foreach (var item in Model.Piatti)
            {
                sum+= item.Prezzo;
            }
            }
            <th><p>@sum €</p></th>
        </tr>
    </tfoot>
</table>